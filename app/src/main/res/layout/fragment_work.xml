<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.work.WorkFragment">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/work_manager_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ich bin in Qurantäne"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.767" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="212dp"
        android:text="Falls Sie positiv auf COVID-19 getestet wurden, können Sie den Button betätigen und bekommen alle 12 Stunden eine Benachrichtigung wie lange Sie noch in Qurantäne sind."
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/work_manager_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/workmanagercancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ich bin nicht mehr in Qurantäne"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/work_manager_button"
        app:layout_constraintVertical_bias="0.522" />

</androidx.constraintlayout.widget.ConstraintLayout>